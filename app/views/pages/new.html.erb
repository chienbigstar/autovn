<div id="page-content-wrapper">
  <div class="container-fluid col-md-8">
    <%= form_for @page, class: 'form-group' do |f| %>
        <label>name</label>
        <%= f.text_field :name, class: 'form-control' %><br>
        <label>Group</label>
        <%= f.select :group_id, [[:no, 0]]+Group.all.map{|g| [g.name, g.id]} %><br>
        <label>Status</label>
        <%= f.select :status, Page.statuses.collect {|k, v| [k, k]}, value: 'not_code', class: 'form-control' %><br>
        <label>time</label>
        <%= f.number_field :time, class: 'form-control' %><br>
        <label>Link Ref</label>
        <%= f.text_area :link_ref, class: 'form-control' %><br>
        <label>description</label>
        <%= f.text_area :description, class: 'form-control' %><br>
        <label>Ref</label>
        <%= f.text_area :ref, class: 'form-control' %><br>
        <label>content</label>
        <%= f.text_area :content, class: 'form-control', col: 150, rows: 15 %><br>
        <%= f.submit :OK, data: { confirm: 'Your confirm message' }, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
