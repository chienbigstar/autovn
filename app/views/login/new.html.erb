<script>
  if(localStorage['isR']) {
    $('#page-content-wrapper').html('');
    window.location.href = '/';
    window.alert('bạn đã đăng kí rồi mà.');
  }
</script>
<div id="page-content-wrapper">
  <div class="container-fluid col-md-4 col-md-offset-2">
    <%= form_tag login_user_path , class: 'form-group', remote: true do  %>
        <label>Username</label>
        <%= text_field_tag :username, '', class: 'form-control' %><br>
        <label>Password</label>
        <%= password_field_tag :password, '', class: 'form-control'%><br>
        <%= submit_tag :OK %>
    <% end %>
  </div>
</div>
